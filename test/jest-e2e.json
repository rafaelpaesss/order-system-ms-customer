{
  "preset": "@nestjs/testing",
  "testEnvironment": "node",
  "testTimeout": 30000,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleFileExtensions": ["js", "json", "ts"],
  "roots": [
    "<rootDir>/test"
  ],
  "testMatch": [
    "**/*.e2e-spec.ts"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.module.ts",
    "!src/**/*.dto.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.entity.ts"
  ],
  "coverageDirectory": "./coverage",
  "coverageProvider": "v8"
}

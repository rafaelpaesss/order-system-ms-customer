generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "dynamodb"
  url      = env("DATABASE_URL") // Certifique-se de configurar o URL corretamente no .env
}

model Customer {
  id        String   @id @default(cuid()) // DynamoDB usa strings como chave prim√°ria
  name      String
  email     String   @unique
  cpf       String   @unique
  isAdmin   Boolean  @default(false)
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["src/*"],
      "@Apis/*": ["Infrastructure/Apis/*"],
      "@Services/*": ["Application/services/*"],
      "@Health/*": ["Presentation/Health/*"],
      "@Customers/*": ["Presentation/Customers/*"]  // Alias para Customers
    },
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "src/**/*.spec.ts",
    "src/**/*.e2e-spec.ts"
  ]
}
